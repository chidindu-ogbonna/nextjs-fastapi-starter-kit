    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "outputCapture": "std",
            "request": "launch",
            "runtimeExecutable": "ts-node",
            "name": "run script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/snippets/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "run server",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std"
        },
        {
            "name": "run server (v-talk)",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:v-talk",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std"
        }
    ]
}
